<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/cyan2</item>
        <item name="colorPrimaryDark">@color/cyan3</item>
        <item name="colorAccent">@color/cyan4</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="DetailActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cyan2</item>
        <item name="colorPrimaryDark">@color/cyan3</item>
        <item name="colorAccent">@color/cyan4</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name = "background" > @color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name= "tabSelectedTextColor">@color/white</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>